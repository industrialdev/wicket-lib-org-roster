{
  "name": "wicket-lib-org-roster",
  "version": "0.1.1",
  "description": "Standalone Tailwind CSS compiler for org-management module",
  "main": "index.js",
  "scripts": {
    "build": "npx -y -p @tailwindcss/cli@^4.1.15 -p tailwindcss@^4.1.14 tailwindcss -i ./public/css/modern-orgman.css -o ./public/css/modern-orgman-compiled.css --minify",
    "watch": "npx -y -p @tailwindcss/cli@^4.1.15 -p tailwindcss@^4.1.14 tailwindcss -i ./public/css/modern-orgman.css -o ./public/css/modern-orgman-compiled.css --watch",
    "dev": "npx -y -p @tailwindcss/cli@^4.1.15 -p tailwindcss@^4.1.14 tailwindcss -i ./public/css/modern-orgman.css -o ./public/css/modern-orgman-compiled.css"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.15",
    "tailwindcss": "^4.1.14"
  },
  "volta": {
    "node": "22.17.1",
    "yarn": "4.9.2"
  }
}
